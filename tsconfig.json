{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./public",
    "rootDir": "./src",
    "importHelpers": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "rootDirs": ["src"],

    /* Source Map Options */
    "sourceRoot": "/",
    "inlineSources": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
